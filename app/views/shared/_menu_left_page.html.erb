        <ul class="catalog">
        <% main_item = @selected_items[0] -%>
        <% if main_item.show_in_menu -%>
          <li><a href="<%= main_item.url -%>" class="active"><%= main_item.title -%></a>
          <% if main_item.children.size > 0 and main_item.show_childrens_in_menu -%>
            <ul>
            <% second_item = @selected_items[1] if @selected_items.size > 1 -%>
            <% for item in main_item.children -%>
            <% if item.show_in_menu -%>
              <% sel = ''; sel = ' class="active"' if second_item and second_item == item -%>
              <li><a href="<%= item.url -%>"<%= raw sel -%>><%= item.title -%></a>
                <% if item.children.size > 0 and item.show_childrens_in_menu -%>
                <ul>
                <% for item2 in item.children -%>
                <% if item2.show_in_menu -%>
                  <% sel = ''; sel = ' class="active"' if @selected_items[2] and @selected_items[2] == item2 -%>
                  <li><a href="<%= item2.url -%>"<%= raw sel -%>><%= item2.title -%></a></li>
                <% end -%>
                <% end -%>
                </ul>
                <% end -%>
              </li>
            <% end -%>
            <% end -%>
            </ul>
          <% end -%>
          </li>
        <% end -%>
        </ul>
    